<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Views="clr-namespace:MVVM.ViewModel;assembly=ViewModel" 
        xmlns:Views1="clr-namespace:MVVM.Views"
        mc:Ignorable="d"
        Title="ReserveRoom" Height="450" Width="800" FontSize="14">


    <Grid Margin="20 10" MaxWidth="750">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type Views:MakeReservationViewModel }" >
                <Views1:MakeReservationView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type Views:ReservationLVViewModel}" >
                <Views1:ReservationListView />
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </Grid>
</Window>
